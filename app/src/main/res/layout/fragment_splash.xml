<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.splash.SplashFragment"
    style="@style/Constraint_Layout_Default">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="@dimen/margin_50_dp"
        android:src="@drawable/neocafe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="@dimen/margin_25_dp"
        android:src="@drawable/waiters_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <com.bhargavms.dotloader.DotLoader
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_100_dp"
        app:dot_radius="7dp"
        app:number_of_dots="3"
        app:color_array="@array/dot_colors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/margin_100_dp"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>