<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/card_view_background"
    android:background="@drawable/rounded_alert_dialog"
    android:layout_marginStart="@dimen/margin_16_dp"
    android:layout_marginEnd="@dimen/margin_16_dp"
    android:layout_marginTop="@dimen/margin_10_dp"
    android:layout_height="120dp">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="150dp"
        style="@style/TextView_Roboto_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginTop="@dimen/margin_10_dp"
        tools:text="Coffee" />

    <TextView
        android:id="@+id/price"
        style="@style/TextView_Roboto_Thin_14sp"
        app:layout_constraintStart_toEndOf="@+id/product_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="@dimen/radius_8_dp"
        tools:text="(300 с за шт)" />

    <TextView
        android:id="@+id/total_price"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        style="@style/TextView_Roboto_Bold_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="600c" />

    <TextView
        android:id="@+id/county"
        style="@style/TextView_Roboto_26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:layout_marginBottom="@dimen/margin_10_dp"
        tools:text="x12" />





</androidx.constraintlayout.widget.ConstraintLayout>