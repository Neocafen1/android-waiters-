<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/margin_16_dp"
    android:layout_marginEnd="@dimen/margin_16_dp"
    android:layout_height="@dimen/margin_70_dp"
    android:layout_marginTop="@dimen/margin_20_dp"
    app:cardCornerRadius="@dimen/margin_16_dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/Constraint_Layout_Default"
        android:backgroundTint="@color/card_view_background">

        <TextView
            android:id="@+id/status"
            style="@style/TextView_Roboto_Bold_16sp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:layout_marginTop="@dimen/margin_10_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Заказ готов" />

        <TextView
            android:id="@+id/time"
            style="@style/TextView_Roboto_14sp"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:layout_marginEnd="@dimen/margin_10_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1 min ago" />

        <TextView
            android:id="@+id/receipt"
            style="@style/TextView_Roboto_14sp"
            android:layout_width="@dimen/width_200_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time"
            tools:text="Hello World" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>