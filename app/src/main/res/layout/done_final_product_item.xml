<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/margin_250_dp"
    android:layout_height="@dimen/margin_250_dp"
    android:layout_gravity="center"
    android:background="@drawable/rounded_alert_dialog"
    android:backgroundTint="@color/card_view_background">

    <TextView
        android:id="@+id/title"
        style="@style/TextView_Roboto_18sp"
        android:text="Заказ успешно оформлен"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_60_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_50_dp"
        android:background="@drawable/ronded_bottom_navigation"
        android:backgroundTint="@color/main_enable_color"
        android:textAllCaps="false"
        android:padding="@dimen/margin_20_dp"
        android:text="Перейти к столам"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:layout_editor_absoluteX="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>