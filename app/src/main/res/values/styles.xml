<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Constraint_Layout_Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/main_background_color</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Title_Text_34sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Title_Text_36sp_Roboto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
    </style>


    <style name="TextView_Roboto_18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView_Thin_18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView_Roboto_14sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView_Roboto_Bold_18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView_Roboto_Bold_14sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DemoTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/main_background_color</item>
        <item name="colorPrimaryDark">@color/main_background_color</item>
        <item name="colorAccent">@color/main_background_color</item>
    </style>

    <style name="TextView_Roboto_Bold_16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView_Roboto_16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView_Roboto_Thin_16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardView_Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_16_dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16_dp</item>
        <item name="android:layout_height">@dimen/margin_50_dp</item>
    </style>

    <style name="EditText_Default">
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_50_dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button_Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_50_dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_16_dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16_dp</item>
    </style>

    <style name="Chip_Custom" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar_Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_50_dp</item>
        <item name="android:background">@color/main_background_color</item>
    </style>

    <style name="Product_Card_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_60_dp</item>
        <item name="android:layout_marginStart">@dimen/margin_16_dp</item>
        <item name="android:layout_marginTop">@dimen/margin_10_dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16_dp</item>
    </style>
</resources>